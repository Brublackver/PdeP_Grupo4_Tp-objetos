object pou {
	
	var property reir = true
	var property hambre = true
	var property cansado = false
	var property comio = false
	var property jugo = false
	var property edad = 7
	var property salud = "normal"
	const energiaInicial = edad * 10
	var property energiaActual = energiaInicial
	var property totalSaludable = 0
    var property totalInsalubre = 0


 method ingerir(alimento) {
	if(hambre)
	  reir = false
			
	alimento.comer(self)
    
    hambre = false
    reir = true
    comio = true
 }
 
 method aumentarEnergia(cantidad) {
	energiaActual += cantidad
 }
 
 method jugar() {
	reir = true
	jugo = true
 }
	
 method baniarse(){
	if(comio && jugo)
	  energiaActual -= 2
	  reir = false
 }
 
 method energizarce(){
	if(self.reir() && energiaActual <= energiaInicial)
	  energiaActual = energiaInicial
 }

}

object fruta {
  method comer(pou) {
    pou.aumentarEnergia(1) 
  }
}

object verdura {
  method comer(pou) {
    pou.aumentarEnergia(1)
  }
}

object bebida {
  method comer(pou) {
    pou.aumentarEnergia(0.5)
  }
}

object fritura {
  method comer(pou) {
    pou.aumentarEnergia(-0.2)
  }
}

object carne {
  method comer(pou) {
	pou.aumentarEnergia(0)
  }
}

